[Unit]
Description=Christmas Train Service
After=network.target

[Service]
WorkingDirectory=/home/legolayout/legolayout
Restart=on-failure
User=legolayout
Environment="PATH=/home/legolayout/.nvm/versions/node/v14.15.1/bin"
Environment=PORT=3000
ExecStart=npm run christmas-train

[Install]
WantedBy=multi-user.target